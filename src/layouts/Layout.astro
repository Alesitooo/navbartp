---
import Card from "../components/Card.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="">
			<nav
				id="nav"
				class="background-color:rgb(255,0,0);"
				aria-label="Top"
			>
				<div class="">
					<a href="/" class=""><img src="logo.png" width="78px" /></a>
				</div>
				<div id="font" class="">
					<a href="/" class="">incio</a>
					<a href="/" class="">sobre mi</a>
					<a href="/" class="">contacto</a>
				</div>
			</nav>
		</header>
		<slot />
	</body>
</html>
<style>
	#nav {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		align-items: center;
		background-color: rgb(231, 231, 7);
		background-size: 40px;
		padding: 10px;
		margin-left: auto;
	}
	#font {
		display: flex;
		gap: 55px;
		font-style: italic;
		font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
			sans-serif;
		font-weight: 800;
		font-size: larger;
		font-stretch: expanded;
		margin-right: 36px;
	}
</style>
