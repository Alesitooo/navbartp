---
import Card from "../components/Card.astro";
import Hamburger from "../components/Hamburger.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="">
			<nav
				id="nav"
				class="flex flex-wrap md:flex-nowrap"
				aria-label="Top"
			>
				<div class="">
					<a href="/" class=""><img src="logo.png" width="78px" /></a>
				</div>

				<Hamburger />

				<div
					id="menu-pc"
					class="w-full hidden md:flex flex-col md:flex-row mt-10 md:pt-0 border-t md:border-0 items-center justify-center"
				>
					<a href="/" class="">incio</a>
					<a href="/" class="">sobre mi</a>
					<a href="/" class="">contacto</a>
				</div>
			</nav>

			<slot />
		</header>
	</body>
	<style>
		#nav {
			display: flex;
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
			background-color: rgb(231, 231, 7);
			background-size: 40px;
			padding: 10px;
			margin-left: auto;
		}

		#menu-pc {
			display: none;
			gap: 55px;
			font-style: italic;
			font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
				sans-serif;
			font-weight: 800;
			font-size: larger;
			font-stretch: expanded;
			margin-right: 36px;
		}
		@media (min-width: 768px) {
			#burger {
				display: none;
			}
			#menu-pc {
				display: flex;
			}
		}
	</style>
	<script is:inline>
		const button = document.getElementById("burger");
		button.addEventListener("click", function () {
			const menu = document.getElementById("menu-pc");
			if (window.getComputedStyle(menu).display === "none") {
				menu.style.display = "flex";
				// Do something..
			} else {
				menu.style.display = "none";
			}
		});
		window.addEventListener("click", function () {
			
		})
	</script>
</html>
