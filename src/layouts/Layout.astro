---
import Hamburger from "../components/Hamburger.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="">
			<nav
				id="nav"
				class="Navbar slidevertical flex flex-wrap md:flex-nowrap"
				aria-label="Top"
			>
				<div class="">
					<a href="/" class=""><img src="logo.png" width="82px" /></a>
					<!-- img src, Coloca el logo; width, maximo de pixeles-->
				</div>

				<Hamburger />
				<!--hidden md:flex flex-col md:flex-row mt-10 md:pt-0 md:border-0 items-center justify-center-->
				<div id="menu-pc" class="w-full hidden md:slide">
					<a href="/" class="">incio</a><!-- Link a x pagina-->
					<a href="/" class="">sobre mi</a>
					<a href="/" class="">contacto</a>
				</div>
			</nav>
			<slot />
		</header>
	</body>
	<style>
		#nav {
			display: flex; /*forma en la que se muestra la lista*/
			flex-direction: row; /*Direccion de la lista: fila horizontal ---*/
			justify-content: space-between; /*Separacion de items*/
			align-items: center; /*Alineamiento de items*/
			background-color: rgb(231, 231, 7); /*Color de fondo*/
			background-size: 40px; /*Tama√±o de fondo*/
			padding: 10px; /*Relleno*/
			margin-left: auto; /*Margen derecho*/
			animation: Entradadesdearriba 1s ease; /*Animacion y su delay*/
		}
		#menu-pc {
			display: none;
			flex-direction: column;
			padding-bottom: 10px;
			align-items: center;
			margin-top: 10px;
			gap: 55px;
			font-style: italic;
			font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
				sans-serif; /*Fuente Caligrafica*/
			font-weight: 800;
			font-size: larger;
			font-stretch: expanded;
			margin-right: 36px;
			animation: Entradadesdearriba 1s ease;
		}

		@media (min-width: 768px) {
			#burger {
				display: none;
			}
			#menu-pc {
				display: flex;
				flex-direction: row;
			}
		}
		@keyframes Entradadesdearriba {
			from {
				transform: translateY(-200%);
			}
			to {
				transform: translateY(0%);
			}
		}
		@keyframes vueltadearriba {
			from {
				transform: translateY(0%);
			}
			to {
				transform: translateY(-200%);
			}
		}
	
		.md:slide (min-width: 768px) {
			width: 100%;

			animation: Entradadesdearriba 0.8s ease;
		}
		.slidevertical {
			height: 100%;

			animation: Entradadesdearriba 0.8s ease;
		}
	</style>
	<script is:inline>
		const button = document.getElementById("burger");
		button.addEventListener("click", function () {
			const menu = document.getElementById("menu-pc");
			if (window.getComputedStyle(menu).display === "none") {
				menu.style.display = "flex";

				// Do something..
			} else {
				menu.style.display = "none";
			}
		});
		window.addEventListener("click", function () {});
	</script>
</html>
